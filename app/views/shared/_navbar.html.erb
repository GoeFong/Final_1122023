<aside class="py-6 px-10 w-64 border-r border-gray-200">
  <%= link_to root_path, class:"link text-xl tracking-tight font-black group text-red-600 hover:text-red-700 transition ease-in-out flex items-center justify-start" do %>
    <%= render_svg "icons/logo" , styles: "fill-current w-8 h-8 text-red-600 group-hover:text-red-700" %>
    <span class="ml-2 text-lg font-black text-black">Helper</span>
  <% end %>
  <ul class="flex flex-col gap-y-6 pt-16">
    <li>
      <%= link_to root_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/congviec", styles: "w-6 h-6 fill-current" %>
        <span>Dashboard</span>
      <% end %>
    </li>
    <% if current_user.has_role?(:xem_vanban) %>
    <li>
      <%= link_to vanbans_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/doc", styles: "w-6 h-6 fill-current" %>
        <span>Văn bản</span>
      <% end %>
    </li>
    <% end %>
    <% if current_user.has_role?(:xem_donvi) %>
    <li>
      <%= link_to donvis_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/build", styles: "w-6 h-6 fill-current" %>
        <span>Đơn vị</span>
      <% end %>
    </li>
    <% end %>
    <% if current_user.has_role?(:capnhat_quyencb) %>

    <li>
      <%= link_to users_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/user2", styles: "w-6 h-6 fill-current" %>
        <span>Cán bộ</span>
      <% end %>
    </li>
    <% end %>

    <li>
      <%= link_to boards_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/overview", styles: "w-6 h-6 fill-current" %>
        <span>Board</span>
      <% end %>
    </li>
     <li>
      <%= link_to xemcongviecs_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/congviec2", styles: "w-6 h-6 fill-current" %>
        <span>Công việc</span>
      <% end %>
    </li>
  </ul>
  <ul class="flex flex-col gap-y-6 pt-16">
    <li>
      <%= link_to edit_user_registration_path , class: "flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/setting", styles: "w-6 h-6 fill-current" %>
        <span>Setting</span>
      <% end %>
    </li>
    <li>
      <%= button_to  destroy_user_session_path, method: :delete, class:"flex gap-x-4 items-center py-2 text-gray-500 hover:text-indigo-600 group" do %>
        <span  class="absolute w-1.5 h-8 bg-indigo-600 rounded-r-full left-0 scale-y-0 -translate-x-full group-hover:scale-y-100 group-hover:translate-x-0 transition-transform ease-in-out"></span>
        <%= render_svg "icons/logout", styles: "w-6 h-6 fill-current" %>
        <span>Đăng xuất</span>
      <% end %>
    </li>
  </ul>

</aside>
