
<div class="container mx-auto px-4">
    <div class="flex items-center justify-between flex-wrap mb-6">
        <h1>
        Users:
        <%= User.count %>
        </h1>

    </div>


 <table class="table-auto border-collapse border-slate-400 w-full">
    <thead class="bg-slate-50 dark:bg-slate-700">
      <tr>

        <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">id</th>
        <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Email</th>
        <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Admin</th>
        <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Quyền</th>
        <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left"></th>
        
      </tr>
    </thead>
      <% @users.each do |user| %>
        <tr>
          <td class="border border-slate-300 text-black"><%= user.id %></td>
          <td class="border border-slate-300 text-black"><%= user.email %></td>
          <td class="border border-slate-300 text-black"><%= user.admin %></td>
          <td class="border border-slate-300 text-black"><%= user.roles.pluck(:name) %></td>
          <td class="border border-slate-300 text-black"><%= link_to 'Cập nhật', edit_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>